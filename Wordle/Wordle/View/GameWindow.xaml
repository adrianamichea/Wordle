        <TextBox Text="{Binding Attempts[2][3], Mode=OneWay}" Background="LightGray" Margin="397,208,316,161" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding Attempts[2][4], Mode=OneWay}" Background="LightGray" Margin="469,208,240,161" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />

        <TextBox Text="{Binding Attempts[3][0], Mode=OneWay}" Background="LightGray" Margin="184,260,526,109" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
