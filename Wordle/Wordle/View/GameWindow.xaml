        <TextBox Text="{Binding Attempts[4][4], Mode=OneWay}" Background="LightGray" Margin="469,310,240,73" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />

        <TextBox Text="{Binding Attempts[5][0], Mode=OneWay}" Background="LightGray" Margin="184,350,526,30" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding Attempts[5][1], Mode=OneWay}" Background="LightGray" Margin="254,350,458,30" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding Attempts[5][2], Mode=OneWay}" Background="LightGray" Margin="325,350,387,30"  BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding Attempts[5][3], Mode=OneWay}" Background="LightGray" Margin="397,350,316,30" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding Attempts[5][4], Mode=OneWay}" Background="LightGray" Margin="469,350,240,30" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />

    </Grid>
  

</Window>
