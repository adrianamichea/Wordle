<Window x:Class="Wordle.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle.View" xmlns:local1="clr-namespace:Wordle.ViewModels"
        WindowStartupLocation="CenterScreen"
    Title="GameWindow" Height="450" Width="800">

    <Grid Margin="10,10,10,0" Height="416" VerticalAlignment="Top">
        <TextBlock Text="Please introduce a five-letter word:" Margin="64,10,501,371" Grid.RowSpan="2"/>
        <TextBox Text="{Binding UserInput}" MaxLength="5" Margin="318,9,370,371" Grid.RowSpan="2" />
        <Button Content="Enter" Command="{Binding UpdateUserInputCommand}" Margin="496,9,216,372" Grid.RowSpan="2"/>

        <TextBox Text="{Binding Attempts[0][0], Mode=OneWay}" Background="LightGray" Margin="184,102,526,267" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding Attempts[0][1], Mode=OneWay}" Background="LightGray" Margin="254,102,455,267" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding Attempts[0][2], Mode=OneWay}" Background="LightGray" Margin="325,102,383,267"  BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding Attempts[0][3], Mode=OneWay}" Background="LightGray" Margin="397,102,311,267" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding Attempts[0][4], Mode=OneWay}" Background="LightGray" Margin="469,102,240,267" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />

        <TextBox Text="{Binding Attempts[1][0], Mode=OneWay}" Background="LightGray" Margin="184,154,526,215" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding Attempts[1][1], Mode=OneWay}" Background="LightGray" Margin="254,154,456,215" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding Attempts[1][2], Mode=OneWay}" Background="LightGray" Margin="325,154,386,215"  BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding Attempts[1][3], Mode=OneWay}" Background="LightGray" Margin="397,154,316,215" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding Attempts[1][4], Mode=OneWay}" Background="LightGray" Margin="469,154,240,215" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"></TextBox>

        <TextBox Text="{Binding Attempts[2][0], Mode=OneWay}" Background="LightGray" Margin="184,208,526,161" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding Attempts[2][1], Mode=OneWay}" Background="LightGray" Margin="254,208,458,161" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
