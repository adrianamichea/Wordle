<Window x:Class="Wordle.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle.View" xmlns:local1="clr-namespace:Wordle.ViewModels"
        WindowStartupLocation="CenterScreen"
    Title="GameWindow" Height="450" Width="800">

    <Grid>


        <TextBlock Text="Please introduce a five-letter word:" Margin="70,36,495,345"/>
        <TextBox Text="{Binding UserInput}" MaxLength="5" Margin="318,36,370,345" />
        <Button Content="Enter" Command="{Binding UpdateUserInputCommand}" Margin="481,36,231,345"/>

        <TextBox Text="{Binding UserInput[0], Mode=OneWay}" Height="30" Background="LightGray" Margin="318,155,0,249" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Width="30" />
        <TextBox Text="{Binding UserInput[1], Mode=OneWay}"   Width="30" Height="30" Background="LightGray" Margin="359,155,411,249" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox Text="{Binding UserInput[2], Mode=OneWay}"   Width="30" Background="LightGray" Margin="400,155,370,249" Height="30"  BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding UserInput[3], Mode=OneWay}"    Width="30" Height="30" Background="LightGray" Margin="450,155,320,249" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox Text="{Binding UserInput[4], Mode=OneWay}"   Width="30" Height="30" Background="LightGray" Margin="495,155,275,249" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
    </Grid>



</Window>
