        <TextBox Text="{Binding Attempts[4][0], Mode=OneWay}" Background="LightGray" Margin="184,310,526,73" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
