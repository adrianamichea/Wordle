<Window x:Class="Wordle.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Wordle Login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Text="{Binding Username}" Width="200" Margin="0 0 0 10"/>
            <TextBox  Text="{Binding Password}"  Width="200" Margin="0 0 0 10"/>
            <Button Content="Login" Width="100" Command="{Binding LoginCommand}"/>
        </StackPanel>
        <Button Content="Register" Width="100" Command="{Binding RegisterCommand}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,299,0,0"/>
    </Grid>

</Window>
