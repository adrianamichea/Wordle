<Window x:Class="Wordle.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordle.View"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Admin Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="649*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="-10,128,10,-128" Grid.ColumnSpan="2">
            <Button Content="Play new game" Command="{Binding PlayNewGameCommand}" Width="150" Margin="0 0 0 10"/>
            <Button Content="Resume last game" Command="{Binding ResumeLastGameCommand}" Width="150" Margin="0 0 0 10"/>
            <Button Content="See statistics" Command="{Binding SeeStatisticsCommand}" Width="150" Margin="0 0 0 10"/>
        </StackPanel>
    </Grid>
</Window>
